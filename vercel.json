{
  "version": 2,
  "buildCommand": "npm run build:js",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/img/(.*)",
      "dest": "/public/img/$1"
    },
    {
      "src": "/(.*\\.js)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/(.*\\.css)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ]
}
